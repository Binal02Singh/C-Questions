#include <stdio.h>
int main(){
    float a;
    printf("Enter the first term: ");
    scanf("%f",&a);
    float r;
    printf("Enter the common ratio: ");
    scanf("%f",&r);
    int n;
    printf("Enter the number of terms: ");
    scanf("%d",&n);
    float sum=0;
    for(int i=0;i<n;i++){
        sum=sum+a;
        a=a*r;
    }
    printf("%f",sum);
    
    return 0;
}
